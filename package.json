{
  "name": "ppdb-ts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:hurl": "bash scripts/test-hurl.sh",
    "playwright:install": "playwright install --with-deps",
    "clean:tests": "rimraf ./coverage ./test-results",
    "clean:next": "rimraf .next",
    "clean:node": "rimraf pnpm-lock.yaml node_modules",
    "clean:all": "rimraf ./coverage ./test-results .next pnpm-lock.yaml node_modules; pnpm install",
    "check": "pnpm run type-check && pnpm run lint && pnpm run fmt:check && pnpm run test",
    "prepare": "husky"
  },
  "dependencies": {
    "@omer-x/next-openapi-json-generator": "^2.0.2",
    "@omer-x/next-openapi-route-handler": "^2.0.0",
    "@prisma/client": "^6.19.0",
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rimraf": "^6.1.0",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.50.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.9",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/swagger-ui-react": "^5.18.0",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.4.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.19.0",
    "rifraf": "^2.0.3",
    "swagger-ui-react": "^5.30.2",
    "tailwindcss": "^4.1.11",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "bash -c 'tsc --project tsconfig.precommit.json --noEmit'",
      "bash -c 'pnpm lint'"
    ],
    "*": [
      "bash scripts/build-on-main.sh"
    ]
  },
  "packageManager": "pnpm@10.22.0"
}

{
  "name": "next-ppdb",
  "version": "1.0.6",
  "private": true,
  "scripts": {
    "dev": "node scripts/build-search-index.mjs && node scripts/get-port.js",
    "dev:killall": "sudo netstat -tunlp  | grep next | awk -F' ' '{print $7}' | awk -F'/' '{print $1}' | xargs -I {} kill -9 {} && sudo netstat -tunlpd | grep next",
    "build": "node scripts/build-search-index.mjs && next build",
    "build:docker": "docker build -t next-ppdb . && docker build -t next-ppdb-scheduler ./docker/scheduler",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:hurl": "bash scripts/test-hurl.sh",
    "playwright:install": "playwright install --with-deps",
    "clean:tests": "rimraf ./coverage ./test-results",
    "clean:next": "rimraf .next",
    "clean:node": "pnpm dlx rimraf pnpm-lock.yaml node_modules && pnpm install",
    "clean:all": "pnpm dlx rimraf ./coverage ./test-results .next pnpm-lock.yaml node_modules && pnpm install",
    "clean:logs": "rimraf logs/",
    "clean:uploads": "rimraf uploads/",
    "check": "pnpm run type-check && pnpm run lint:fix && pnpm run fmt && pnpm run build",
    "prepare": "husky",
    "prisma": "node scripts/prisma-env.js",
    "prisma:migrate": "node scripts/prisma-env.js migrate dev",
    "prisma:generate": "node scripts/prisma-env.js generate",
    "release": "release-it"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.0.7",
    "@omer-x/next-openapi-json-generator": "^2.0.2",
    "@omer-x/next-openapi-route-handler": "^2.0.0",
    "@prisma/client": "^6.19.0",
    "@types/mdx": "^2.0.13",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "fuse.js": "^7.1.0",
    "ioredis": "^5.8.2",
    "next": "15.4.5",
    "next-mdx-remote": "^5.0.0",
    "nodemailer": "^7.0.11",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "rate-limiter-flexible": "^9.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-mdx-frontmatter": "^5.2.0",
    "rimraf": "^6.1.2",
    "sane-email-validation": "^3.0.1",
    "semver": "^7.7.3",
    "tar": "^7.5.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^7.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.25",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/sane-email-validation": "^3.0.3",
    "@types/semver": "^7.7.1",
    "@types/swagger-ui-react": "^5.18.0",
    "@types/tar": "^6.1.13",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "15.4.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.19.0",
    "release-it": "^19.0.6",
    "release-it-pnpm": "^4.6.6",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "remark-strip-html": "^1.0.2",
    "rifraf": "^2.0.3",
    "strip-markdown": "^6.0.0",
    "swagger-ui-react": "^5.30.3",
    "tailwindcss": "^4.1.17",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --no-warn-ignored",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "bash -c 'pnpm tsc --project tsconfig.precommit.json --noEmit'"
    ],
    "*": [
      "bash scripts/build-on-main.sh"
    ]
  },
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402"
}

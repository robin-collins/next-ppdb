generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model animal {
  animalID   Int        @id @default(autoincrement()) @db.MediumInt
  animalname String     @default("") @db.VarChar(12)
  breedID    Int        @default(0) @db.MediumInt
  customerID Int        @default(0) @db.MediumInt
  SEX        animal_sex @default(Male) @map("SEX")
  colour     String?    @db.Text
  cost       Int        @default(0) @db.SmallInt
  lastvisit  DateTime   @default(dbgenerated("'1900-01-01'")) @db.Date
  thisvisit  DateTime   @default(dbgenerated("'1900-01-01'")) @db.Date
  comments   String?    @db.TinyText
  breed      breed      @relation(fields: [breedID], references: [breedID], onUpdate: Restrict, onDelete: Restrict, map: "fk_animal_breed")
  customer   customer   @relation(fields: [customerID], references: [customerID], onUpdate: Restrict, onDelete: Restrict, map: "fk_animal_customer")
  notes      notes[]

  @@index([animalname], map: "ix_animalname")
  @@index([breedID], map: "ix_breedID")
  @@index([customerID], map: "ix_customerID")
}

model breed {
  breedID   Int       @id @default(autoincrement()) @db.MediumInt
  breedname String    @default("") @unique(map: "breedname") @db.VarChar(30)
  avgtime   DateTime? @default(dbgenerated("'00:00:00'")) @db.Time(0)
  avgcost   Int?      @default(0) @db.SmallInt
  animal    animal[]

  @@unique([breedID], map: "breedID")
}

model customer {
  customerID Int     @id @default(autoincrement()) @db.MediumInt
  surname    String  @default("") @db.VarChar(20)
  firstname  String? @db.VarChar(20)
  address    String? @db.VarChar(50)
  suburb     String? @db.VarChar(20)
  postcode   Int?    @default(0) @db.SmallInt
  phone1     String? @default("0") @db.VarChar(10)
  phone2     String? @db.VarChar(10)
  phone3     String? @db.VarChar(10)
  email      String? @db.VarChar(200)
  animal     animal[]

  @@unique([customerID], map: "customerID")
  @@index([surname], map: "surname")
}

model notes {
  noteID   Int      @id @default(autoincrement()) @db.MediumInt
  animalID Int      @default(0) @db.MediumInt
  notes    String   @db.MediumText
  date     DateTime @default(dbgenerated("'1900-01-01'")) @db.Date
  animal   animal   @relation(fields: [animalID], references: [animalID], onUpdate: NoAction, onDelete: NoAction)

  @@unique([noteID], map: "noteID")
  @@index([animalID], map: "animalID")
}

enum animal_sex {
  Male
  Female
}
